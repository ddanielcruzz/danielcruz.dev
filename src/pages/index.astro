<style>
  @keyframes bg-animation {
    0% {
      transform: translateY(-50%) scale(0.5);
      opacity: 0;
    }
    50% {
      transform: translateY(0%) scale(1);
    }
    100% {
      opacity: 1;
    }
  }

  @keyframes main-animation {
    0% {
      filter: blur(5px);
      opacity: 0.2;
    }
    100% {
      filter: blur(0px);
    }
  }
  .bg-gradient {
    position: absolute;
    height: 450px;
    background: radial-gradient(
        450px 450px at 40% 100%,
        #171717 100px,
        transparent 90%
      ),
      radial-gradient(450px 450px at 85% 0%, #171717 100px, transparent 90%),
      radial-gradient(
        at 49% 10%,
        hsla(165, 100%, 50%, 0.2) 0px,
        transparent 65%
      );
    left: 0;
    margin: 0 calc(-30vw + 50%);
    animation: bg-animation 500ms 500ms ease-in-out both;
  }
  .main {
    animation: main-animation 1s cubic-bezier(0.25, 1, 0.5, 1) backwards;
    transform: translate3d(0, 0, 0);
  }

  @media (prefers-reduced-motion) {
    .bg-gradient {
      animation: none;
    }
    .main {
      animation: none;
    }
  }
</style>

